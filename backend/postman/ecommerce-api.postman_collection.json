        { "name": "Update Category", "request": { "method": "PATCH", "url": "{{baseUrl}}/categories/1", "body": { "mode": "raw", "raw": "{\n  \"name\": \"Updated\"\n}" }, "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{accessToken}}" } ] } },
