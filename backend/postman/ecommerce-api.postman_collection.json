{
  "info": {
    "_postman_id": "ecommerce-api-collection",
    "name": "Ecommerce API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Comprehensive collection for all backend endpoints. Includes auth, categories, products, cart, orders, user profile, admin, and health."
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        { "name": "Register", "request": { "method": "POST", "url": "{{baseUrl}}/auth/register", "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}" }, "header": [ { "key": "Content-Type", "value": "application/json" } ] } },
        { "name": "Login", "request": { "method": "POST", "url": "{{baseUrl}}/auth/login", "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}" }, "header": [ { "key": "Content-Type", "value": "application/json" } ] } },
        { "name": "Logout", "request": { "method": "POST", "url": "{{baseUrl}}/auth/logout", "header": [ { "key": "Authorization", "value": "Bearer {{accessToken}}" } ] } },
        { "name": "Refresh Token", "request": { "method": "POST", "url": "{{baseUrl}}/auth/refresh", "body": { "mode": "raw", "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}" }, "header": [ { "key": "Content-Type", "value": "application/json" } ] } },
        { "name": "Reset Password", "request": { "method": "POST", "url": "{{baseUrl}}/auth/reset-password", "body": { "mode": "raw", "raw": "{\n  \"email\": \"user@example.com\"\n}" }, "header": [ { "key": "Content-Type", "value": "application/json" } ] } }
      ]
    },
    {
      "name": "Categories",
      "item": [
        { "name": "Get Categories", "request": { "method": "GET", "url": "{{baseUrl}}/categories" } },
